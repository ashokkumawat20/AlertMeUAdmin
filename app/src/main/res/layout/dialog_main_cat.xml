<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E2E1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:orientation="horizontal"

        android:weightSum="1">


        <ImageView
            android:id="@+id/back_arrow1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".2"
            android:src="@drawable/left_nev_arrow"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Add Main Category"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/CashDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"

            />


        <EditText
            android:id="@+id/currencyEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top|left"
            android:hint="Enter Currency Sign"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <EditText
            android:id="@+id/mainCatEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top|left"
            android:hint="Enter Category Name"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <EditText
            android:id="@+id/priceEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:inputType="numberDecimal"
            android:gravity="top|left"
            android:hint="Enter Price per hour"

            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <EditText
            android:id="@+id/discountEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:inputType="numberDecimal"
            android:gravity="top|left"
            android:hint="Enter Discount"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/color_faintgray"
        android:text="Submit"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="#000000"

        />

</LinearLayout>
